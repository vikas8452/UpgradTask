<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_profile_welcome_text"
        android:layout_width="wrap_content"
        android:text="Select 4 Tags Click on Submit. "
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.github.okdroid.checkablechipview.CheckableChipView
                android:id="@+id/chip"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:color="@color/chips_color"
                android:text="c"
                app:ccv_checkedTextColor="@color/checkedChipColor" />

            <com.github.okdroid.checkablechipview.CheckableChipView
                android:id="@+id/chip1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:color="@color/chips_color"
                android:text="java"
                app:ccv_checkedTextColor="@color/checkedChipColor" />

            <com.github.okdroid.checkablechipview.CheckableChipView
                android:id="@+id/chip2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:color="@color/chips_color"
                android:text="pyhton"
                app:ccv_checkedTextColor="@color/checkedChipColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.github.okdroid.checkablechipview.CheckableChipView
                android:id="@+id/chip3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:color="@color/chips_color"
                android:text="ios"
                app:ccv_checkedTextColor="@color/checkedChipColor" />

            <com.github.okdroid.checkablechipview.CheckableChipView
                android:id="@+id/chip4"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:color="@color/chips_color"
                android:text="android"
                app:ccv_checkedTextColor="@color/checkedChipColor" />

            <com.github.okdroid.checkablechipview.CheckableChipView
                android:id="@+id/chip5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:color="@color/chips_color"
                android:text="html"
                app:ccv_checkedTextColor="@color/checkedChipColor" />

        </LinearLayout>

        <com.github.okdroid.checkablechipview.CheckableChipView
            android:id="@+id/chip6"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"

            android:color="@color/chips_color"
            android:text="Php"
            android:textAlignment="center"
            app:ccv_checkedTextColor="@color/checkedChipColor" />
    </LinearLayout>


<Button
    android:id="@+id/submit"
    android:layout_width="match_parent"
    android:layout_margin="40dp"
    android:layout_height="wrap_content"
    android:textColor="@color/colorPrimary"
    android:text="Submit"
    />

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="#ff0000"/>

</LinearLayout>